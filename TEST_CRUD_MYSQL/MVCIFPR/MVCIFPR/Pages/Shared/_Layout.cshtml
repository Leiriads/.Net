    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function toggleTheme() {
            const body = document.querySelector('body');
            const navLinks = document.querySelectorAll('a.nav-link');
            body.classList.toggle('dark-theme');

            if (body.classList.contains('dark-theme')) {
                for (let i = 0; i < navLinks.length; i++) {
                    navLinks[i].classList.remove('text-dark');
                    navLinks[i].classList.add('text-light');
                }
            } else {
                for (let i = 0; i < navLinks.length; i++) {
                    navLinks[i].classList.remove('text-light');
                    navLinks[i].classList.add('text-dark');
                }
            }
            SaveTheme();
        }



        function SaveTheme() {
           

            // Toggle the theme choice in localStorage
            const themeChoice = localStorage.getItem('themeChoice');
            if (themeChoice === 'dark') {
                localStorage.setItem('themeChoice', 'light');
            } else {
                localStorage.setItem('themeChoice', 'dark');
            }
        }

        // Set the initial theme based on localStorage or system preferences
        const themeChoice = localStorage.getItem('themeChoice');
        if (themeChoice === 'dark') {
            document.body.classList.add('dark-theme');
        }



    </script>

    <style>
        :root {
            --primary-color: #2196F3;
            --background-color: #fff;
